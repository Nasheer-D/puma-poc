{
  "compilerOptions": {
    "target":                 "es6",
    "module":                 "commonjs",
    "declaration":            false,
    "removeComments":         true,
    "sourceMap":              true,
    "noLib":                  false,
    "outDir":                 "dist",
    "emitDecoratorMetadata":  true,
    "experimentalDecorators": true,
    "strictNullChecks":       false,
    "noUnusedLocals":         true
  },
  "include":         [
    "src/**/*",
    "test/**/*"
  ],
  "exclude":         [
    "node_modules",
    "src/sdk/**"
  ]
}
